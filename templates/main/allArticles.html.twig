{% extends 'base.html.twig' %}

{% block title %}Tous les articles{% endblock %}

{% block body %}
  <!-- Page Content -->
  <div class="container-fluid page-all-article">
    {% include 'partials/flashes/success.html.twig' %}
    <div class="row">
      <div class="col-lg-12 my-3">
        <!-- Jumbotron Header -->
        <header class="jumbotron my-4">
          <h1 class="display-3">Retrouvez ici toutes les dernières actualités du club !</h1>
          <p class="lead">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Ipsa, ipsam, eligendi, in quo sunt possimus non incidunt odit vero aliquid similique quaerat nam nobis illo aspernatur vitae fugiat numquam repellat.</p>
        </header>
      </div>
    </div>

      <!-- Page Features -->
    <div class="row text-center">
      {% for article in articles %}
        <div class="col-lg-4 col-md-4 col-sm-12 my-5">
          <div class="card h-100">
            <h1 class="card-title my-3">{{ article.title }}</h1>
            <div class="card-body">
              <p class="card-text">{{ article.content|purify|striptags|slice(0,150) }}...</p>
            </div>
            <div class="card-footer">
              <p class="card-text">Publié le : <b>{{ article.publicationDate|date('d/m/Y à H:i:s') }}</b><br> Par : <b>{{ article.author.firstname }} {{ article.author.lastname }}</b></p>
              <a href="{{ path('article', { slug: article.slug }) }}" class="btn btn-yellow">Lire la suite</a>
            </div>
          </div>
        </div>
        {% endfor %}
    </div>
  </div>
  <!-- /.container -->
{% endblock %}
